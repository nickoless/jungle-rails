<section class="login">
  <div class="wrapper">
    <%= form_tag '/login', class: "form-login" do %>       
      <h2 class="form-login-heading">Please login</h2>
      <%= text_field_tag :email, nil, placeholder: 'Email Address', class: 'form-control' %>
      <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>   
    <% end %>
  </div>
</section>
